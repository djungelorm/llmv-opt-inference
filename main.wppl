console.log(addInstruction(exampleProgram).instrs);
console.log(removeInstruction(exampleProgram).instrs);
console.log(changeOpcode(exampleProgram).instrs);
console.log(changeOperand(exampleProgram).instrs);
console.log(swapOperands(exampleProgram).instrs);

